<header>
  <img id="logo" src="logo.png" alt="Mountain Finder Logo" style="width:20%;height:20%;">
  <section class="fancy-line"> </section>
</header>
<section class="navigation-bar">
  <nav>
    <ul>
      <li><a href="#">Home</a></li>
      <li><a href="#">Browse Resorts </a></li>
      <li><a href="#">Ski Holiday Tips</a></li>
      <li><a href="#">Blog </a></li>
    </ul>
  </nav>
</section>
<section class="search-image">
  <img id="jumbotron" src="MountainJumbotron.jpg" alt="Mountain Backdrop">
  
  <%= form_tag search_path, method: :get do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  <% end %>

</section>
<%= debug @resort_search %>

<section class="fancy-line"> </section>
<section class="table-section">
  <h3>Browse Resort Table</h3>
  <table id="resortTable" class="tablesorter" cellspacing="1"> 
    <thead> 
      <tr> 
          <th>Resort</th>
          <th>Country</th> 
          <th>Nearest Airport</th> 
          <th>Transfer Time</th> 
          <th>Size of Ski Domain</th> 
          <th>Easy Km</th> 
          <th>Medium Km</th> 
      </tr> 
    </thead> 
    <tbody> 
      <% @resorts.each do |resort| %>
        <tr> 
          <td><%= link_to resort.resort_name, resort_path(resort) %></td> 
          <td><%= resort.country %></td> 
          <td><%= resort.nearest_airport %></td> 
          <td><%= resort.transfer_time %></td> 
          <td><%= resort.size_of_ski_domain %> km<br>
            <section class='slope-difficulty-gauge'>
              <section class="easy-runs" id="<%= resort.proportion_easy_runs.to_i %>-percent-easy-runs" style="width: <%=resort.proportion_easy_runs.to_i %>%"></section>
              <section class="medium-runs" style="width: <%=resort.proportion_medium_runs.to_i %>%"></section>
              <section class="hard-runs" style="width: <%=resort.proportion_hard_runs.to_i %>%"></section>
            </section>
          </td>
          <td><%= resort.easy_runs_km %>km</td>
          <td><%= resort.medium_runs_km %>km</td>
        </tr> 
      <% end %>
    </tbody> 
  </table> 
</section>

<script type="text/javascript">
  $(document).ready(function() { 
    $("#resortTable").tablesorter({
      cssAsc: "headerSortUp", cssDesc: "headerSortDown" 
    }); 
  }); 
</script>


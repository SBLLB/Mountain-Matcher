<header>
  <img id="logo" src="logo.png" alt="Mountain Finder Logo" style="width:20%;height:20%;">
  <section class="fancy-line"> </section>
</header>
<section class="navigation-bar">
  <nav>
    <ul>
      <li><a href="#">Home</a></li>
      <li><a href="#">Browse Resorts </a></li>
      <li><a href="#">Ski Holiday Tips</a></li>
      <li><a href="#">Blog </a></li>
    </ul>
  </nav>
</section>
<section class="search-image">
  <img id="jumbotron" src="MountainJumbotron.jpg" alt="Mountain Backdrop">
  
  <%= form_tag search_path, method: :get do %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  <% end %>

</section>
<%= debug @resorts %>

<section class="fancy-line"> </section>
<section class="table-section">
  <h3>Browse Resort Table</h3>
  <table id="resortTable" class="tablesorter" cellspacing="1"> 
    <thead> 
      <tr> 
          <th>Resort</th>
          <th>Country</th> 
          <th>Nearest Airport</th> 
          <th>Transfer Time</th> 
          <th>Size of Ski Domain</th> 
          <th>% Easy</th> 
          <th>% Medium</th> 
          <th>% Hard</th> 
          <th>Apres Ski</th> 
          <th>Cost of Skipass</th> 
      </tr> 
    </thead> 
    <tbody> 
      <% @data.each do |data| %>
        <tr> 
          <td><%= link_to data.resort_name, resort_path(data) %></td> 
          <td><%= data.country %></td> 
          <td><%= data.nearest_airport %></td> 
          <td><%= data.transfer_time %></td> 
          <td><%= data.size_of_ski_domain %> km</td> 
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr> 
      <% end %>
    </tbody> 
  </table> 
</section>

<script type="text/javascript">
  $(document).ready(function() { 
    $("#resortTable").tablesorter({
      cssAsc: "headerSortUp", cssDesc: "headerSortDown" 
    }); 
  }); 
</script>

